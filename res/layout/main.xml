<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
             >
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="top">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="#626059"
            android:weightSum="1"
            android:layout_height="60dp" >

    <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Refresh"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/refreshbutton"
            android:id="@+id/refresh" android:layout_weight=".5" android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Current Date"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/refreshbutton"
                android:id="@+id/date" android:layout_weight=".5" android:textSize="20dp"/>
    </LinearLayout>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:background="@drawable/conor_textview"
            android:layout_weight="1"
            android:id="@+id/listView"/>

     <LinearLayout android:layout_width="match_parent"
                   android:layout_height="61dp"
                   android:background="#ff5c625f"
                   android:weightSum="1">
        <com.mopub.mobileads.MoPubView
            android:id="@+id/adview"
            android:layout_width="fill_parent"
             android:layout_gravity="top"
            android:layout_height="fill_parent"

            android:layout_weight="1"
           />

     </LinearLayout>
    </LinearLayout>
</LinearLayout>

